<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/marginCardItems">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewItemAlbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/imageViewMinHeight"
            android:padding="@dimen/imageViewPadding10dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textViewItemAlbum"
            style="@style/textViewInfo"
            tools:text="Album's Name" />

    </LinearLayout>

</androidx.cardview.widget.CardView>